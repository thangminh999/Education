@model BookStore.Models.Category

<!-- Modal -->
<div class="modal fade" id="UpdateCategory-@Model.Id" data-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="UpdateCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 style="color:red" class="modal-title fs-5" id="UpdateCategoryLabel">Chú ý! Bạn hiện đang thực hiện Cập nhật!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Cập nhật</button>
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal"><i class="bi bi-backspace-reverse-fill"></i> Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
